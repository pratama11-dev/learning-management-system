body {
  width: 32.7cm;
  height: 25.5cm;
  margin:auto;
}

.cert {
  &__main-bg {
    width: 100%;
    height: 100%;
    margin-left: auto;
    margin-right: auto;
  }

  &__secondary-bg-container {
    position: absolute;
    left: 0;
    width: inherit;
    height: inherit;
    z-index: -2;

    & > img {
      display: block;
      width: 523px;
      margin-top: 88px;
      margin-left: auto;
      margin-right: auto;
    }
  }

  &__content {
    padding: 0.5rem 4rem 0rem 4rem;
    & * {
      text-align: center;
      font-family: sans-serif;
    }
  }

  &__footer {
    width: 100%;
    position: absolute;
    bottom: 40px;
    text-align:center;
  }
}

.cert-content {
  &__logo {
    width: 160px;
    display: block;
    margin:auto;
  }

  &__title {
    margin: 10px 0;
    font-size: 64px;
    letter-spacing: 4px;
  }

  &__number {
    margin: 10px 0;
    font-size: 31px;
  }

  &__name {
    margin: 10px 0;
    font-size: 40px;
    text-decoration: underline;
    font-style: italic;
    font-weight: normal;
    font-family: lobster;
  }

  &__subtitle {
    margin: 10px 0;
    font-size: 25px;
    margin-top: 10px;
    font-weight: bold;
  }

  &__subdesc {
    font-size: 25px;
    margin-top: 10px;
  }
}

.cert-footer {
  &__barcode {
    text-align:center;

    & > svg {
      width: 198px;
      height: 198px;
      margin-top: -36px;

      & > g > rect {
        fill: transparent;
      }
    }
  }

  &__sign {
    font-size: 17px;
  }
}

